@model List<Offers>
<h5 class="card-title fw-semibold mb-4">Offers</h5>
<a asp-action="Create"  class="btn btn-outline-primary m-1 float-end">Create</a>
<div class="table-responsive">
    <table class="table table-bordered text-nowrap mb-0 align-middle">
        <thead class="text-dark fs-4">
            <tr>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Id</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Profession</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Title</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">ImageUrl</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Action</h6>
                </th>
            </tr>
        </thead>
       
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="border-bottom-0">
                        @item.Id
                    </td>
                    <td class="border-bottom-0">
                        @item.Profession
                    </td>
                    <td class="border-bottom-0">
                        @item.Title
                    </td>
                    <td class="border-bottom-0">
                        <img src="@item.ImageUrl" style="width:50px;height:50px" />
                    </td>
                    <td class="border-bottom-0">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1">Delete</a>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success m-1">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>